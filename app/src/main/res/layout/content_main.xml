<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="charko.tester01.com.imageviewertop10.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ImageView Tester App"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iviv_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <ListView
        android:id="@+id/image_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_tv"
        tools:listitem="@layout/image_adapter"
        android:layout_marginTop="5dp"></ListView>

</RelativeLayout>
